<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    textStyle for extra small text subHeadings-->
    <style name="extraSmallText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorsubheading</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--    textStyle for extra small text subHeadings-->
    <style name="smallText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorSmallText</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--    textStyle for extra small text subHeadings-->
    <style name="ContactText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorheading</item>
        <item name="android:textSize">23dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!--    textStyle for extra small text subHeadings-->
    <style name="extraSmallTextHome" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#4b433a</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!--    textStyle for text in home screen-->
    <style name="textHome" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>







</resources>
